<?xml version="1.0"?>
<ruleset name="ANDW Notices Coding Standards">
    <description>Coding standards for ANDW Notices plugin</description>

    <!-- Include the WordPress-Extra standard. -->
    <rule ref="WordPress-Extra">
        <!-- Allow array short syntax. -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        <!-- Allow spacing around concatenation. -->
        <exclude name="Squiz.Strings.ConcatenationSpacing"/>
    </rule>

    <!-- Include the WordPress-Docs standard. -->
    <rule ref="WordPress-Docs"/>

    <!-- Check all PHP files in the project. -->
    <file>.</file>

    <!-- Exclude the build directory -->
    <exclude-pattern>*/build/*</exclude-pattern>
    <!-- Exclude node_modules -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <!-- Exclude vendor -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <!-- Exclude debug tools -->
    <exclude-pattern>*/debug-tools/*</exclude-pattern>

    <!-- Check for minimum PHP version -->
    <config name="minimum_supported_wp_version" value="6.2"/>

    <!-- WordPress prefix -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="andw"/>
                <element value="ANDW"/>
            </property>
        </properties>
    </rule>

    <!-- WordPress text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="andw-notices"/>
            </property>
        </properties>
    </rule>
</ruleset>